{
  "name": "chronos-companion",
  "displayName": "Chronos for Jira Companion",
  "version": "1.0.1",
  "description": "A companion extension for the Chronos app.",
  "contributors": [
    {
      "name": "Adrian Fahrbach",
      "email": "adrianfahrbach@me.com",
      "url": "https://adrianfahrbach.com"
    },
    {
      "name": "Florian Merz",
      "email": "florian.merz@mail.de",
      "url": "https://florianmrz.com"
    }
  ],
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --target=chrome-mv3 && plasmo build --target=firefox-mv3 && plasmo build --target=edge-mv3 && plasmo build --target=safari-mv3",
    "package": "plasmo package --target=chrome-mv3 && plasmo package --target=firefox-mv3 && plasmo package --target=edge-mv3 && plasmo package --target=safari-mv3",
    "release": "release-it",
    "refresh-token:google": "npx gcp-refresh-token"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "plasmo": "^0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/lodash": "^4.17.4",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "release-it": "^17.3.0",
    "typescript": "5.3.3"
  },
  "overrides": {
    "msgpackr": "^1.10.1",
    "svelte": "^4.2.19",
    "@parcel/watcher": "^2.5.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*.atlassian.net/*"
    ]
  }
}
