  "workbench.colorCustomizations": {
    "editorBracketMatch.border": "#000",
    "activityBar.background": "#1C69DE",
    "activityBar.foreground": "#FAFAFA",
    "activityBar.inactiveForeground": "#FAFAFA99",
    "titleBar.activeBackground": "#1C69DE",
    "titleBar.activeForeground": "#FAFAFA"
  },
  "gitmoji.onlyUseCustomEmoji": true,
  "gitmoji.addCustomEmoji": [
    {
      "emoji": "‚ú® feat:",
      "code": ":feat:",
      "description": "Introduce new features"
    },
    {
      "emoji": "üêõ fix:",
      "code": ":fix:",
      "description": "Fixes a bug for the user (not build/CI related)"
    },
    {
      "emoji": "üí¨ content:",
      "code": ":content:",
      "description": "Add or update content"
    },
    {
      "emoji": "üßπ chore:",
      "code": ":chore:",
      "description": "Update build system or external dependencies (e.g. gulp tasks)"
    },
    {
      "emoji": "üèó ci:",
      "code": ":ci:",
      "description": "Add or update CI configuration or scripts"
    },
    {
      "emoji": "üìñ docs:",
      "code": ":docs:",
      "description": "Add or update the documentation"
    },
    {
      "emoji": "‚ôªÔ∏è refactor:",
      "code": ":refactor:",
      "description": "Refactor code"
    },
    {
      "emoji": "üß™ test:",
      "code": ":test:",
      "description": "Add or update tests"
    },
    {
      "emoji": "üè∑ release:",
      "code": ":release:",
      "description": "Publish a release"
    }
