  "stylelint.snippet": ["css", "less", "postcss", "scss", "typescript"],
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss",
    "typescript"
  ],
  "editor.formatOnSave": true,
  "i18n-ally.displayLanguage": "en-US",
  "i18n-ally.enabledFrameworks": ["react", "i18next"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.usage.derivedKeyRules": [
    "{key}_one",
    "{key}_other"
  ],
  "i18n-ally.localesPaths": ["libs/shared/src/i18n"],
  "i18n-ally.namespace": true,
  "i18n-ally.pathMatcher": "{locale}/{namespace}.json",
  "i18n-ally.sortKeys": true,
  "i18n-ally.sourceLanguage": "en-US",
  // Hot fix for https://github.com/prettier/prettier-vscode/issues/3020 - can be removed when the issue is fixed
  "prettier.prettierPath": "./node_modules/prettier",
  "typescript.tsdk": "node_modules/typescript/lib",
}
